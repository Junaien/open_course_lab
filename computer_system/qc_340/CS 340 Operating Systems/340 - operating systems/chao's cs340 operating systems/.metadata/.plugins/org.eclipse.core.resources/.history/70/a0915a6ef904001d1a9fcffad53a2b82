public class Project1{
	
	public static void main(String args[]){
		int numVisitors = 0;
		System.out.print("Enter # of visitors: ");
		numVisitors = Integer.parseInt(args[0]);
		
		initVisitors(numVisitors);
		
	}//main
	
	public static void initVisitors(int numVisitors){
		Thread Visitors[] = new Thread[numVisitors];
		
		for(int i = 0; i < numVisitors; i++){
			Visitors[i] = new Thread(new Visitor(), "Visitor " + i);
			Visitors[i].start();
		}//for
	}//initVisitors
		
}//Project 1