public class Visitor implements Runnable{
	
	boolean handicap;
	
	public Visitor(){
		handicap = false;
	}//default
	
	public void printMessage(String message){
		String threadName = Thread.currentThread().getName();
		startTime();
		System.out.print(threadName + ":" + message);
			if(this.handicap == true){
				System.out.print("This visitor is handicapped.");
			}//if
		System.out.println();
	}//printMessage
	
	static final void startTime(){
		int hour = 0, minute = 0, second = 0;
		Calendar current = Calendar.getInstance();
		current.setTimeInMillis(System.currentTimeMillis());
		hour = current.get(Calendar.HOUR);
		minute = current.get(Calendar.MINUTE);
		second = current.get(Calendar.SECOND);
		System.out.print(hour + ":" + minute + ":" + second + "--");
	}//startTime
	
	public void run(){
		Random generator = new Random();
		int sleepTime = 0;//random sleep time
		int detHandicap = 0;//this determines if visitor is handicap or not
		
		sleepTime = generator.nextInt(5000) + 3000;
		detHandicap = generator.nextInt(10);
		
		if(detHandicap == 5){
			//visitor is handicap
			this.handicap = true;
		}//if
		
		try{
		Thread.sleep(sleepTime);
		printMessage("Arrives to the museum." + detHandicap);
		}//try
		catch(Exception e){e.printStackTrace();}
		
	}//run
	
	
}//Visitor